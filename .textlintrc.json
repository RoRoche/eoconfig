{
    "plugins": {
        "@textlint/markdown": {
            "extensions": [".md"]
        }
    },
    "filters": {},
    "rules": {
        "no-dead-link": true,
        "no-todo": true,
        "common-misspellings": true,
        "spellcheck-tech-word": true,
        "write-good": {
            "tooWordy": true,
            "passive": true
        },
        "max-comma": {
            "max": 3
        },
        "en-max-word-count": {
            "max": 30
        }
    }
}
